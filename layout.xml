<?xml version="1.0" encoding="utf-8"?>
<layout>
	<grid>
    <row color="blue">
      <button icon="left" onTap="moveScreenLeft" />
      <button icon="right" onTap="moveScreenRight" />
    </row>

    <row color="blue">
      <button image="icon-windows.png" onTap="showWindows" scale="native" />
      <button image="icon-apps.png" onTap="showApps" scale="native" />
    </row>

    <row color="blue">
      <button image="icon-move.png" onTap="moveWindow"  scale="native" />
      <button icon="fullscreen" onTap="fullscreen" />
    </row>

    <row>
      <button icon="config" onTap="options"/>
      <button icon="docclose" onTap="close" color="red" />
    </row>

    <row color="yellow">
      <button icon="arrowup" onTap="moveUp"/>
      <button icon="arrowdown" onTap="moveDown" />
      <button icon="arrowleft" onTap="moveLeft"/>
      <button icon="arrowright" onTap="moveRight" />
      <button icon="playpause" onTap="enter" />
    </row>

  </grid>
</layout>